{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist",
        "sourceMap": true,
        "target": "es5"
    },
    "include": [
        "./src/ts/**/*"
    ],
    "exclude": [
        "node_modules",
        "./src/ts/**/*-test.*"
    ]
}