{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "jsx": "preserve",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es2015",
    "module": "es2015"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.*",
    "dist"
  ]
}
